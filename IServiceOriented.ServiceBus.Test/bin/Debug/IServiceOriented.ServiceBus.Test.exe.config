<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <bindings>
      <netNamedPipeBinding>
        <binding name="namedPipe" />
      </netNamedPipeBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="debug">
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <client>
      <endpoint name="" contract="IServiceOriented.ServiceBus.IHello" binding="netNamedPipeBinding" bindingConfiguration="namedPipe" address="net.pipe://localhost/remotehello" />
      <endpoint name="listener" contract="IServiceOriented.ServiceBus.IHello" binding="netNamedPipeBinding" bindingConfiguration="namedPipe" address="net.pipe://localhost/hello" />
    </client>
    <services>
      <service name="IServiceOriented.ServiceBus.HelloListener" behaviorConfiguration="debug" >
        <endpoint name="IServiceOriented.ServiceBus.Hello" contract="IServiceOriented.ServiceBus.IHello" binding="netNamedPipeBinding" bindingConfiguration="namedPipe" address="net.pipe://dynamic" />
      </service>
      <service name="IServiceOriented.ServiceBus.Hello" behaviorConfiguration="debug" >
        <endpoint name="IServiceOriented.ServiceBus.Hello" contract="IServiceOriented.ServiceBus.IHello" binding="netNamedPipeBinding" bindingConfiguration="namedPipe" address="net.pipe://localhost/remotehello" />
      </service>
    </services>
  </system.serviceModel>
</configuration>